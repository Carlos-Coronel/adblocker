{
  "manifest_version": 3,
  "name": "Bloqueador de Anuncios para YouTube",
  "version": "1.0.0",
  "description": "Bloquea todos los anuncios de YouTube de manera eficiente y discreta",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "background": {
    "service_worker": "scripts/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["scripts/blocker.js", "scripts/content.js"],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["scripts/interceptor.js"],
      "run_at": "document_start",
      "world": "MAIN",
      "all_frames": false
    }
  ],
  
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "cookies"
  ],
  
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.googlevideo.com/*",
    "*://*.doubleclick.net/*",
    "*://*.googleads.g.doubleclick.net/*",
    "*://*.googlesyndication.com/*",
    "*://*.googleadservices.com/*",
    "*://*.google.com/*",
    "*://*.google.com.py/*",
    "*://*.adservice.google.com/*"
  ],
  
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "config/rules.json"
      }
    ]
  },
  
  "web_accessible_resources": [
    {
      "resources": ["config/*.json"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}